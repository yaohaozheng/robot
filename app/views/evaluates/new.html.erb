<div class="panel panel-default">
  <div class="panel-heading">
    <i class="fa fa-heart"></i> 评分板块
  </div>
  <div class="panel-body" style="height:170px; padding-top:0px;">
    <h3>服务用户数:<%= @chat.users[0].chats.size %></h3>
    <div>
      <%= form_for (@evaluate) do |f| %>
        <input type="hidden" name="evaluate[user_id]" value="<%= current_user.id %>" />
        <input type="hidden" name="evaluate[chat_id]" value="<%= @chat.id %>" />
        <%= f.label "分数：" %>
        <input type="number" name="evaluate[score]" id="evaluate_score" style="width:100px;" min="0.0" max="5.0" step="0.5" value="5">
        <%= f.submit "评价", class: "btn btn-primary" %>
      <% end %>
    </div>
    <table class="table">
      <tbody>
        <tr>
          <td width="40%"><span class="lable lable-default" >平均分数：</span></td>
          <td><div>
            <% if @mean.nil? %>
            <% else %>
              <%= @mean %>
            <% end %>
            <%= @s %>
          </div>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
